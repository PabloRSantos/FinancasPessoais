{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "typeRoots": [
            "./customTypes",
            "./node_modules/@types"
        ],
        "allowJs": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "removeComments": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@controllers/*": [
                "./src/controllers/*"
            ],
            "@models/*": [
                "./src/models/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}
