{
    "compilerOptions": {
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "jsx": "react",
      "lib": ["es6"],
      "moduleResolution": "node",
      "noEmit": true,
      "strict": true,
      "resolveJsonModule": true,
      "target": "es2017",
     "module": "commonjs",
     "typeRoots": [
        "src/customTypes",
        "./node_modules/@types"
    ],
  "skipLibCheck": true,
    },
  "forceConsistentCasingInFileNames": true,
    "exclude": [
      "node_modules",
      "babel.config.js",
      "metro.config.js",
      "jest.config.js"
    ],
    "include": ["src/**/*", "src/*", "src/customTypes/customType.d.ts"]
  }

  
 